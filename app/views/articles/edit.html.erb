
<div class="row">
<%= form_for :article, url: article_path(@article), method: :patch do |f| %>
<% if @article.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="large-12 rows">
 <p class="head2"> Edit Article </p>
</div>
<div class="large-8 rows">
<p>
  <%= f.label :title %><br>
  <%= f.text_field :title %>
</p>
</div>
<div class="large-4 rows">
<p>
  <%= f.label :text %><br>
  <%= f.text_area :text %>
</p>
</div>
<div class="large-4 rows">
<p>Attachment</p>
  <%= f.file_field :attachment %>
</div>
<div class="large-4 rows">
  <%= f.submit :class=> 'small button' %>
<% end %>
<%= link_to 'Back', articles_path, :class=> 'small button' %>
</div>
</div>