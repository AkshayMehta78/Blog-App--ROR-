<% flag=false %>
<% if user_signed_in? %>
<% flag=true else flag=false %>
<% end %>

<h3 class="head1">Listing All Articles</h3>
<hr/>
<div class="row">
  <div class="large-4 rows">
    <span class="new_article"><%=link_to 'New article',new_article_path %></span><br><Br>
  </div>
  <div class="large-8 rows">
    <table>
      <tr>
           <th>Title</th>
           <th>Text</th>
           <th></th>
            <% if flag==true %>
           <th></th>
           <th></th>
           <% end %>
      </tr>
       <% @articles.each do |article| %>
      <tr>
          <td><%= article.title %></td>
          <td><%= article.text %></td>
          <td><%= link_to 'Show', article_path(article) %></td>
          <% if flag==true %>
          <td><%= link_to 'Edit',edit_article_path(article)  %></td>
          <td><%= link_to 'Destroy', article_path(article),method: :delete, data: { confirm: 'Are you sure?' } %></td>

          <% end %>
      </tr>
      <% end %>
  </table>
<br>
<%= will_paginate @articles %>